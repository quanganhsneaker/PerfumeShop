@model PerfumeShop.DTOs.AdminOrderPagedVM
@{
    Layout = "_AdminLayout";
}
<h2 class="fw-bold mb-4">Quản lý đơn hàng</h2>

<!-- Form tìm kiếm / lọc -->
<form method="get" class="row mb-4">

    <!-- Tìm mã đơn -->
    <div class="col-md-4">
        <input name="searchCode" class="form-control"
               placeholder="Tìm theo mã đơn..."
               value="@Model.SearchCode" />
    </div>

    <!-- Lọc trạng thái -->
    <div class="col-md-3">
        <select name="status" class="form-control">
            <option value="">-- Tất cả --</option>
            <option value="Pending" selected="@(Model.StatusFilter == "Pending" ? "selected" : null)">Chờ xử lý</option>
            <option value="Shipping" selected="@(Model.StatusFilter == "Shipping" ? "selected" : null)">Đang giao</option>
            <option value="Completed" selected="@(Model.StatusFilter == "Completed" ? "selected" : null)">Hoàn thành</option>
            <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled" ? "selected" : null)">Đã hủy</option>
        </select>
    </div>

    <!-- PageSize -->
    <div class="col-md-3">
        <select name="pageSize" class="form-control" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5 ? "selected" : null)">Hiển thị 5</option>
            <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">Hiển thị 10</option>
            <option value="20" selected="@(Model.PageSize == 20 ? "selected" : null)">Hiển thị 20</option>
        </select>
    </div>

    <div class="col-md-2">
        <button class="btn btn-dark w-100">Lọc</button>
    </div>

</form>

<!-- Bảng dữ liệu -->
<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày tạo</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Thanh toán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model.Orders)
        {
            <tr>
                <td>@o.OrderCode</td>
                <td>@o.CustomerName</td>
                <td>@o.CreatedDateString</td>
                <td>@o.TotalAmount.ToString("N0") đ</td>
                <td>@o.Status</td>
                <td>@o.PaymentStatus</td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize&searchCode=@Model.SearchCode&status=@Model.StatusFilter">«</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       href="?page=@i&pageSize=@Model.PageSize&searchCode=@Model.SearchCode&status=@Model.StatusFilter">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize&searchCode=@Model.SearchCode&status=@Model.StatusFilter">»</a>
            </li>

        </ul>
    </nav>
}
