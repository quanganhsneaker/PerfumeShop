@model List<PerfumeShop.Models.Order>
@{
    Layout = "_AdminLayout";
}

<h2>Danh sách đơn hàng</h2>

<table class="table table-bordered bg-white shadow">
    <tr>
        <th>Mã đơn</th>
        <th>Khách hàng</th>
        <th>Tổng tiền</th>
        <th>Trạng thái</th>
        <th>Ngày tạo</th>
        <th></th>
    </tr>

    @foreach (var o in Model)
    {
        <tr>
            <td>@o.OrderCode</td>
            <td>@o.User.FullName</td>
            <td>@o.TotalAmount.ToString("N0") đ</td>
            <td>@o.Status</td>
            <td>@o.CreatedAt</td>
            <td>
                <a class="btn btn-dark btn-sm" href="/AdminOrder/Detail/@o.Id">Xem</a>
            </td>
        </tr>
    }
</table>
