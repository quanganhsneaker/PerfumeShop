@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #000;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 30px;
        }

            .sidebar h3 {
                color: #fff;
                text-align: center;
                margin-bottom: 30px;
                letter-spacing: 1px;
            }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: white;
                font-size: 16px;
                text-decoration: none;
                border-left: 3px solid transparent;
            }

                .sidebar a:hover {
                    background: #222;
                    border-left-color: #fff;
                }

        .content {
            margin-left: 250px;
            padding: 30px;
        }

        .topbar {
            height: 60px;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 15px 25px;
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-end;
        }

        .btn-logout {
            background: #dc3545;
            color: white;
            padding: 6px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-logout:hover {
                background: #b32d3b;
                color: white;
            }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h3>ADMIN PANEL</h3>

        <a href="/AdminHome/Dashboard">Dashboard</a>
        <a href="/ProductAdmin/Index">Sản phẩm</a>
        <a href="/CategoryAdmin/Index">Loại hàng</a>
        <a href="/AdminOrder/Index">Đơn hàng</a>
        <a href="/AdminUser/Index">Người dùng</a>
        <a href="/AdminPermission/Index">Phân quyền</a>
        <a href="/AdminStatics/Index">Thống kê</a>
    </div>

    <!-- CONTENT -->
    <div class="content">

        <div class="topbar">
            <a class="btn-logout" href="/Auth/Logout">Đăng xuất</a>
        </div>

        @RenderBody()

    </div>

</body>
</html>
