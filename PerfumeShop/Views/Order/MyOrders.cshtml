@model PerfumeShop.DTOs.OrderListPagedVM


@{
    Layout = "_ShopLayout";
}

<h2 class="mb-4 text-center fw-bold">Đơn hàng của tôi</h2>



<form method="get" class="row mb-4">


    <div class="col-md-4">
        <input name="searchCode"
               class="form-control"
               placeholder="Tìm theo mã đơn..."
               value="@Model.SearchCode" />
    </div>


    <div class="col-md-3">
        <select name="status" class="form-control">
            <option value="">-- Tất cả trạng thái --</option>

            <option value="Pending"
                    selected="@(Model.StatusFilter == "Pending" ? "selected" : null)">
                Chờ xử lý
            </option>

            <option value="Shipping"
                    selected="@(Model.StatusFilter == "Shipping" ? "selected" : null)">
                Đang giao
            </option>

            <option value="Completed"
                    selected="@(Model.StatusFilter == "Completed" ? "selected" : null)">
                Hoàn thành
            </option>

            <option value="Cancelled"
                    selected="@(Model.StatusFilter == "Cancelled" ? "selected" : null)">
                Đã hủy
            </option>
        </select>
    </div>



    <div class="col-md-3">
        <select name="pageSize" class="form-control" onchange="this.form.submit()">

            <option value="5"
                    selected="@(Model.PageSize == 5 ? "selected" : null)">
                Hiển thị 5
            </option>

            <option value="10"
                    selected="@(Model.PageSize == 10 ? "selected" : null)">
                Hiển thị 10
            </option>

            <option value="20"
                    selected="@(Model.PageSize == 20 ? "selected" : null)">
                Hiển thị 20
            </option>

        </select>
    </div>


    <div class="col-md-2">
        <button class="btn btn-dark w-100">Lọc</button>
    </div>

</form>





<table class="table table-hover table-bordered shadow-sm bg-white rounded">
    <thead class="table-dark">
        <tr>
            <th class="text-center">Mã đơn</th>
            <th class="text-center">Ngày tạo</th>
            <th class="text-center">Trạng thái</th>
            <th class="text-center">Tổng tiền</th>
            <th class="text-center">Thanh toán</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var o in Model.Orders)
        {
            <tr>
                <td class="text-center fw-bold">@o.OrderCode</td>

                <td class="text-center">@o.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>

                <td class="text-center">
                    @switch (o.Status)
                    {
                        case "Pending":
                            <span class="badge bg-warning text-dark">Chờ xử lý</span>;
                            break;
                        case "Shipping":
                            <span class="badge bg-primary">Đang giao</span>;
                            break;
                        case "Completed":
                            <span class="badge bg-success">Hoàn thành</span>;
                            break;
                        case "Cancelled":
                            <span class="badge bg-danger">Đã hủy</span>;
                            break;
                        default:
                            <span class="badge bg-secondary">Không xác định</span>;
                            break;
                    }
                </td>

                <td class="text-center text-danger fw-bold">@o.TotalAmount.ToString("N0") đ</td>

                <td class="text-center">
                    @if (o.PaymentStatus == "Paid")
                    {
                        <span class="badge bg-success px-3 py-2">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark px-3 py-2">Chưa thanh toán</span>
                    }
                </td>

                <td class="text-center">
                    <a href="/Order/Detail/@o.Id" class="btn btn-sm btn-outline-dark">
                        Xem chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">


            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(Model.CurrentPage - 1)
                        &pageSize=@Model.PageSize
                        &searchCode=@Model.SearchCode
                        &status=@Model.StatusFilter">
                    «
                </a>
            </li>

 
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       href="?page=@i
                            &pageSize=@Model.PageSize
                            &searchCode=@Model.SearchCode
                            &status=@Model.StatusFilter">
                        @i
                    </a>
                </li>
            }


            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?page=@(Model.CurrentPage + 1)
                        &pageSize=@Model.PageSize
                        &searchCode=@Model.SearchCode
                        &status=@Model.StatusFilter">
                    »
                </a>
            </li>

        </ul>
    </nav>
}


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (Context.Request.Query["success"] == "1")
{
    <script>
        Swal.fire({
            icon: "success",
            title: "Thanh toán thành công!",
            text: "Đơn hàng đã được cập nhật.",
            showConfirmButton: false,
            timer: 1800
        });
    </script>
}
