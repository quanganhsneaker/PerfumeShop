@model PerfumeShop.DTOs.LoginDto
@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Đăng nhập";
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<style>
    .auth-box {
        max-width: 450px;
        margin: auto;
        margin-top: 60px;
        background: #fff;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .auth-title {
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-luxury {
        background: black;
        color: white;
        font-weight: 600;
        padding: 10px;
        border-radius: 8px;
        transition: 0.2s;
    }

        .btn-luxury:hover {
            background: #333;
            color: white;
        }
</style>

<div class="auth-box">
    <h3 class="auth-title">Đăng nhập tài khoản</h3>

    <form method="post">
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <button class="btn btn-luxury w-100 mt-3">Đăng nhập</button>
    </form>

    <p class="text-center mt-3">
        Chưa có tài khoản?
        <a href="/Auth/Register">Đăng ký ngay</a>
    </p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@e.ErrorMessage</div>
            }
        </div>
    }
</div>
