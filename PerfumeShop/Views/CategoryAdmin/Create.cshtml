@model PerfumeShop.Models.Category

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<h2 class="mb-4">Thêm loại sản phẩm</h2>

<form method="post">

    <div class="mb-3">
        <label class="form-label">Tên loại</label>
        <input name="Name" class="form-control" required />
    </div>

    <button class="btn btn-success">Thêm</button>
    <a href="/CategoryAdmin" class="btn btn-secondary">Hủy</a>

</form>
