@using PerfumeShop.Domain.Models
@model List<Product>
@{
    Layout = "_ShopLayout";
}

<!-- ===========================
       CSS FULL LUXURY PREMIUM
     =========================== -->
<style>
    /* GRID */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
        gap: 25px;
        margin-top: 25px;
    }

    /* CARD */
    .product-card {
        background: #fff;
        border-radius: 18px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        transition: .35s ease;
        opacity: 0;
        transform: translateY(18px);
        animation: fadeUp .5s ease forwards;
    }

    @@keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 16px 32px rgba(0,0,0,0.18);
    }

    /* PRODUCT IMAGE */
    .product-img-wrapper {
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 240px;
        border-bottom: 1px solid #f4f4f4;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: .4s ease-in-out;
    }

    .product-card:hover .product-img {
        transform: scale(1.08);
    }

    /* SLIDE ADD TO CART (ONLY OVER IMAGE) */
    .add-hover-layer {
        position: absolute;
        bottom: -60px;
        left: 0;
        width: 100%;
        padding: 10px;
        text-align: center;
        background: rgba(255,255,255,0.95);
        transition: .3s ease-in-out;
    }

    .product-img-wrapper:hover .add-hover-layer {
        bottom: 0;
    }

    /* INFO CONTENT */
    .product-info {
        padding: 16px;
    }

    .product-name {
        font-size: 17px;
        font-weight: 700;
        margin-bottom: 6px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .product-price {
        font-size: 18px;
        font-weight: 800;
        color: #d10000;
        margin-bottom: 6px;
    }

    /* RATING */
    .rating-stars {
        color: #ffc107;
        font-size: 15px;
    }

    .rating-count {
        font-size: 13px;
        color: #777;
    }

    /* VIEW BUTTON */
    .btn-view {
        background: #111;
        color: #fff;
        border-radius: 10px;
        padding: 8px 16px;
        font-size: 13px;
        transition: .25s;
        text-decoration: none;
    }

        .btn-view:hover {
            background: #333;
        }

    /* ADD BUTTON */
    .btn-add {
        background: linear-gradient(135deg, #ff64b4, #b06bff);
        border: none;
        color: white;
        font-weight: 600;
        padding: 8px 20px;
        font-size: 14px;
        border-radius: 10px;
        box-shadow: 0 6px 15px rgba(255, 100, 180, .35);
        transition: .25s;
    }

        .btn-add:hover {
            transform: scale(1.1);
            box-shadow: 0 10px 22px rgba(255, 100, 180, .55);
        }

    /* WISHLIST BUTTON */
    .wishlist-btn {
        position: absolute;
        top: 14px;
        right: 14px;
        font-size: 24px;
        color: #ccc;
        transition: .28s ease;
        z-index: 10;
    }

        .wishlist-btn:hover {
            color: #ff3568;
            transform: scale(1.25);
        }
    /* ===============================
       BUTTON ADD TO CART – PREMIUM VIP
       =============================== */
    .btn-add-to-cart {
        width: 90%;
        padding: 10px 20px;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        color: white;
        font-size: 14px;
        background: linear-gradient(135deg, #ff64b4, #8a54ff);
        box-shadow: 0 6px 15px rgba(255, 100, 180, .35);
        transition: 0.25s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-add-to-cart i {
            font-size: 18px;
        }

        .btn-add-to-cart:hover {
            transform: translateY(-3px) scale(1.06);
            box-shadow: 0 12px 25px rgba(255, 100, 180, .55);
            background: linear-gradient(135deg, #ff70c0, #9a63ff);
        }

        .btn-add-to-cart:active {
            transform: scale(0.95);
            box-shadow: 0 4px 10px rgba(255, 100, 180, .35);
        }

    .product-img-wrapper:hover {
        filter: brightness(1.05);
    }

</style>

<!-- ===========================
         PRODUCT LIST BODY
     =========================== -->
<h2 class="fw-bold mb-4"> Danh sách sản phẩm nổi bật</h2>

<div class="product-grid">
    @{
        int index = 0;
    }
    @foreach (var p in Model)
    {
        <div class="product-card" style="animation-delay:@(0.05 * index)s">
            @{
                index++;
            }

          

            <!-- Wishlist -->
            <div class="wishlist-btn"><i class="bi bi-heart"></i></div>

            <!-- Image wrapper -->
            <div class="product-img-wrapper">
                <img src="@p.ImageUrl" class="product-img" />

                <!-- Add to Cart Slide -->
                <div class="add-hover-layer">
                    <button class="btn-add-to-cart"
                            onclick="addToCart('@p.ImageUrl', @p.Id)">
                        <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                    </button>
                </div>


            </div>

            <!-- Info -->
            <div class="product-info">
                <div class="product-name">@p.Name</div>

                <div class="product-price">@p.Price.ToString("N0") đ</div>

               

                <div class="mt-2">
                    <a href="/Shop/Details/@p.Id" class="btn-view">Xem</a>
                </div>
            </div>

        </div>
    }
</div>
