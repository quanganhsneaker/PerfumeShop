        </form>

            <div class="header-item user-dropdown">
                <i class="bi bi-person"></i>

                @if (User.Identity.IsAuthenticated)
                {
                    <small class="user-name">@User.Identity.Name</small>

                    <!-- MENU DROPDOWN -->
                    <div class="user-menu">

                        <a href="/Order/MyOrders">
                            <i class="bi bi-receipt-cutoff me-2"></i> Đơn hàng của tôi
                        </a>

                        <a href="/Auth/Logout">
                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                        </a>

                    </div>
                }
                else
                {
                    <a href="/Auth/Login" class="text-white small text-decoration-none">Đăng nhập</a>
                }
            </div>

            <div class="header-item">
                <i class="bi bi-telephone"></i>
                <small>18006047</small>
            </div>

            <div class="header-item">
                <a href="/Cart" class="text-white text-decoration-none d-flex flex-column align-items-center">
                    <div class="cart-icon-wrapper" id="cart-icon">
                        <i class="bi bi-cart"></i>
                        <span class="cart-badge" id="cart-count">@ViewBag.CartCount</span>
                    </div>
                    <small>Giỏ hàng</small>
                </a>
            </div>
          

        </div>
    </div>
    <div id="chatbot-btn">💬 Hỗ trợ</div>

    <div id="chatbot-box">
        <div class="chat-header">
            Chatbot PerfumeShop
            <span id="chat-close">×</span>
        </div>

        <div id="chat-body"></div>

        <div class="chat-input">
            <input id="chat-text" placeholder="Nhập câu hỏi..." />
            <button id="chat-send">Gửi</button>
        </div>
    </div>
</div>

    <div style="margin-top: 110px;"></div>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- TempData -->
    <script>
            var toastMessage = "@TempData["toast"]";
        var toastType = "@TempData["toastType"]";
        var deleteSuccessMessage = "@TempData["DeleteSuccess"]";
    </script>

    <!-- Script chung -->
    <script src="~/js/site.js"></script>

    <script>
        $(function () {
            if (toastMessage && toastMessage.trim() !== "") {

                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-right",
                    timeOut: 1000,
                    extendedTimeOut: 1000,
                    showDuration: 500,
                    hideDuration: 400,
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    newestOnTop: true,
                    preventDuplicates: true
                };


                if (toastType === "success") {
                    toastr.success(toastMessage);
                }

                else if (toastType === "error") {
                    toastr.error(toastMessage);
                }

                else if (toastType === "warning") {
                    toastr.warning(toastMessage);
                }
                else {
                    toastr.info(toastMessage);
                }
            }
        });
    </script>



    <script>

        function flyToCart(imgSrc, buttonElement) {
            const cartIcon = document.getElementById("cart-icon");

            const start = buttonElement.getBoundingClientRect();
            const end = cartIcon.getBoundingClientRect();

            const fly = document.createElement("img");
            fly.src = imgSrc;
            fly.className = "fly-item";

            fly.style.left = start.left + "px";
            fly.style.top = start.top + "px";

            const x = end.left - start.left;
            const y = end.top - start.top;

            fly.style.setProperty("--x", x + "px");
            fly.style.setProperty("--y", y + "px");

            document.body.appendChild(fly);

            setTimeout(() => fly.remove(), 900);
        }

        function addToCart(imgSrc, productId) {
            const button = event.target;
            const cartCount = document.getElementById("cart-count");

            fetch(`/Cart/Add?id=${productId}`)
                .then(res => res.json())
                .then(data => {
                    cartCount.innerText = data.cartCount;

                    cartCount.classList.add("badge-bounce");
                    setTimeout(() => cartCount.classList.remove("badge-bounce"), 400);

                    flyToCart(imgSrc, button);
                });
        }

        function buyNow(productId) {
            fetch(`/Cart/Add?id=${productId}`)
                .then(res => res.json())
                .then(() => {
                    window.location.href = "/Cart";
                });
        }
                   const btn = document.getElementById("chatbot-btn");
        const box = document.getElementById("chatbot-box");
        const body = document.getElementById("chat-body");
        const input = document.getElementById("chat-text");
        const sendBtn = document.getElementById("chat-send");

        btn.onclick = () => box.style.display = "flex";
        document.getElementById("chat-close").onclick = () => box.style.display = "none";


        function showTyping() {
            const typing = document.createElement("div");
            typing.id = "typing-bot";
            typing.className = "typing fade-in";
            typing.innerHTML = `
                <span class="typing-dot"></span>
                <span class="typing-dot"></span>
                <span class="typing-dot"></span>
            `;
            body.appendChild(typing);
            body.scrollTop = body.scrollHeight;
        }


        function hideTyping() {
            const el = document.getElementById("typing-bot");
            if (el) el.remove();
        }


        async function sendMessage() {
            const text = input.value.trim();
            if (!text) return;

    
            body.innerHTML += `<div class="msg msg-user fade-in">${text}</div>`;
            input.value = "";
            body.scrollTop = body.scrollHeight;

           
            showTyping();

      
            const res = await fetch("/Chat/Ask", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ question: text })
            });

            const data = await res.json();

   
            hideTyping();

           
            body.innerHTML += `<div class="msg msg-bot fade-in">${data.answer}</div>`;
            body.scrollTop = body.scrollHeight;
        }

     
        sendBtn.onclick = sendMessage;

       
        input.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault();
                sendMessage();
            }
        });

    </script>

</body>
</html>