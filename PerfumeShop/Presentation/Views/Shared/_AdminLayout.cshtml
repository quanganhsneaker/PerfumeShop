@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Admin</title>

    <!-- BOOTSTRAP + ICONS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        /* ================= DARK MODE VARS ================= */
        html[data-theme='light'] {
            --bg: #f1f3f8;
            --card: #ffffff;
            --sidebar-bg: linear-gradient(180deg, #0f172a, #1e293b);
            --sidebar-text: #cbd5e1;
            --sidebar-hover: rgba(255,255,255,0.12);
            --topbar-bg: #ffffff;
            --topbar-text: #333;
            --text: #1e293b;
        }

        html[data-theme='dark'] {
            --bg: #0f172a;
            --card: #1e293b;
            --sidebar-bg: linear-gradient(180deg, #000, #111827);
            --sidebar-text: #e5e7eb;
            --sidebar-hover: rgba(255,255,255,0.08);
            --topbar-bg: #111827;
            --topbar-text: #e2e8f0;
            --text: #e2e8f0;
        }

        /* ================= SIDEBAR ================= */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: var(--sidebar-bg);
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 25px;
            box-shadow: 4px 0 12px rgba(0,0,0,0.2);
            z-index: 100;
            transition: background .25s;
        }

            .sidebar h3 {
                color: white;
                text-align: center;
                margin-bottom: 30px;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 14px 22px;
                color: var(--sidebar-text);
                font-size: 15px;
                font-weight: 500;
                text-decoration: none;
                transition: all .2s;
            }

                .sidebar a:hover {
                    background: var(--sidebar-hover);
                    color: #fff;
                    padding-left: 28px;
                }

                .sidebar a i {
                    font-size: 18px;
                }

        /* ================= CONTENT ================= */
        .content {
            margin-left: 250px;
            padding: 0;
            transition: all .25s;
        }

        /* ================= TOPBAR ================= */
        .topbar {
            height: 70px;
            background: var(--topbar-bg);
            color: var(--topbar-text);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 10px 25px;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            position: sticky;
            top: 0;
            z-index: 99;
            transition: background .25s;
        }

        .admin-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e2e8f0;
        }

        .main-content {
            padding: 25px;
            background: var(--bg);
            min-height: 100vh;
            transition: background .25s, color .25s;
        }

        .theme-switch {
            margin-right: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
        }

            .theme-switch input {
                width: 45px;
                height: 22px;
                appearance: none;
                background: #cbd5e1;
                border-radius: 20px;
                position: relative;
                cursor: pointer;
                outline: none;
                transition: 0.3s;
            }

                .theme-switch input:checked {
                    background: #3b82f6;
                }

                .theme-switch input::before {
                    content: "";
                    width: 18px;
                    height: 18px;
                    background: white;
                    position: absolute;
                    top: 2px;
                    left: 3px;
                    border-radius: 50%;
                    transition: 0.3s;
                }

                .theme-switch input:checked::before {
                    transform: translateX(22px);
                }

    </style>
</head>

<body>
    <div class="sidebar">
        <h3>ADMIN PANEL</h3>

        <a href="/AdminHome/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
        <a href="/ProductAdmin/Index"><i class="bi bi-bag"></i> Sản phẩm</a>
        <a href="/CategoryAdmin/Index"><i class="bi bi-tags"></i> Loại hàng</a>
        <a href="/AdminOrder/Index"><i class="bi bi-receipt"></i> Đơn hàng</a>
        <a href="/AdminUser/Index"><i class="bi bi-people"></i> Người dùng</a>
        <a href="/AdminPermission/Index"><i class="bi bi-shield-lock"></i> Phân quyền</a>
        <a href="/AdminStatics/Index"><i class="bi bi-bar-chart"></i> Thống kê</a>
    </div>


    <div class="content">

        <div class="topbar">

            <div class="theme-switch">
                <span><i class="bi bi-moon-stars"></i></span>
                <input type="checkbox" id="themeToggle">
            </div>

            <div class="dropdown">
                <img src="https://i.pravatar.cc/80"
                     class="admin-avatar dropdown-toggle"
                     data-bs-toggle="dropdown" />

                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Hồ sơ</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Cài đặt</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <a class="dropdown-item text-danger fw-bold" href="/Auth/Logout">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>


        <div class="main-content">

          
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>

    </div>


    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const toggle = document.getElementById("themeToggle");
        const html = document.documentElement;

        // Load trạng thái từ localStorage
        if (localStorage.getItem("adminTheme") === "dark") {
            html.setAttribute("data-theme", "dark");
            toggle.checked = true;
        }

        toggle.addEventListener("change", () => {
            if (toggle.checked) {
                html.setAttribute("data-theme", "dark");
                localStorage.setItem("adminTheme", "dark");
            } else {
                html.setAttribute("data-theme", "light");
                localStorage.setItem("adminTheme", "light");
            }
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
